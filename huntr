show_enhanced_menu() {
    echo -e "${PURPLE}=== ğŸ¥· Enhanced Network Stealth Sweeper - Nmap Optimized ===${NC}"
    echo -e "${CYAN}Features: Intelligent filtering, XML parsing, advanced discovery${NC}"
